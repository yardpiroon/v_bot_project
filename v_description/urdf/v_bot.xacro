<?xml version="1.0"?>
<robot name="myrobot" xmlns:xacro="http://www.ros.org/wiki/xacro">



<!-- #include matertals file ที่เขียนแยกไว้มา -->
  <xacro:include filename="$(find v_description)/urdf/materials.xacro"/>

<!-- #include Plug In file ที่เขียนแยกไว้สำหรับ Gazebo -->
  <xacro:include filename="$(find v_description)/urdf/v_bot.gazebo"/>

  <xacro:property name = "cameraSize" value = "0.05"/>
  <xacro:property name = "cameraMass" value = "0.1"/>
  
<!--> ////////////////////////////base/////////////////////////<-->

  <link name='v_base'>
    <pose>0 0 0.1 0 0 0</pose>


<!--  Inertia ของส่วน Body (ที่เป็น base )  ****** หมดคือค่าสมมุติ ผมไม่รู้ค่าจริงที่มันสัมพันธ์กับหุ่น-->
    <inertial>
      <mass value="3.0"/>
      <origin xyz="0.0 0 0.1" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

<!--  กำหนดขอบเขตการชนของหุ่น -->
    <collision name='v_base_collision'>
      <geometry>
        <box size=".4 .4 .1"/>
      </geometry>
    </collision>

<!-- การแสดงผลของและรูปร่างของส่วน Body  -->
    <visual name='v_base_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".4 .4 .1"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision name = "back_base_col">
      <origin xyz="-0.15 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.15" length="0.08"/>
      </geometry>
    </collision>
    <visual name = "back_base_vis">
      <origin xyz="-0.15 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.15" length="0.08"/>
      </geometry>
      <material name = "white"/>
    </visual>

    <collision name = "front_base_col">
      <origin xyz="0.15 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.15" length="0.08"/>
      </geometry>
    </collision>
    <visual name = "front_base_vis">
      <origin xyz="0.15 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.15" length="0.08"/>
      </geometry>
      <material name = "white"/>
    </visual>
    
        <collision name = "v_second_base_col">
      <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.3 0.3 0.1"/>
      </geometry>
    </collision>
    <visual name = "v_second_base_vis">
      <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.3 0.3 0.1"/>
      </geometry>
      <material name = "white"/>
    </visual>



 <!--> ////////////////////////// Caster Back ///////////////////////<-->   

<!-- ล้อ support หลัง-->
    <collision name='caster_back_collision'>
      <origin xyz="-0.15 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>

    <visual name='caster_back_visual'>
      <origin xyz="-0.15 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="orange"/>
    </visual>

<!--> /////////////////////////// Caster Front //////////////////////<-->
<!-- ล้อ support หน้า-->
    <collision name='caster_front_collision'>
      <origin xyz="0.15 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>

    <visual name='caster_front_visual'>
      <origin xyz="0.15 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="orange"/>
    </visual>

  </link>
      
<!--///////////////// สร้าง Link ล้อซ้าย-ขวา //////////////-->
  <link name="left_wheel">
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <surface>
              <friction>
                 <ode>
                    <mu>20</mu>
                    <mu2>10</mu2>
                 </ode>
              </friction>
           </surface>
    </collision>
    
    <visual name="left_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="orange"/>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <inertia
        ixx=".1" ixy="0.0" ixz="0.0"
        iyy=".1" iyz="0.0"
        izz=".1"/>
    </inertial>
  </link>

  <link name="right_wheel">
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <surface>
              <friction>
                 <ode>
                    <mu>20</mu>
                    <mu2>10</mu2>
                 </ode>
              </friction>
           </surface>
    </collision>
    
    <visual name="right_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="orange"/>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <inertia
        ixx=".1" ixy="0.0" ixz="0.0"
        iyy=".1" iyz="0.0"
        izz=".1"/>
    </inertial>
  </link>


<!-- ///////////////// สร้าง Joint  สำหรับตัวล้อและหุ่น ///////////////  -->
<!-- Joint type จะต้องเป็น continuous เพื่อให้หมุนล้อแกนโดยไม่มี limit  -->
<!--  โดย joint จะติดไปกับ Frame ของ body เป็นหลัก parent เลยต้องเป็น v_base(ชื่อ link ของ body )-->
    <joint type="continuous" name="left_wheel_joint">
    <origin xyz="0 0.25 0" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="v_base"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <joint_properties damping="0.0" friction="0.1"/>
  </joint>

  <joint type="continuous" name="right_wheel_joint">
    <origin xyz="0 -0.25 0" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="v_base"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <joint_properties damping="0.0" friction="0.1"/>
  </joint>

<!-- //////////////////////////////// Plug in Link////////////////////////////////// -->
<!-- /////////////// joint type เป็น Fix ทั้งหมด เพื่อให้ติดไปกับตัวหุ่น ////////////////////// -->
<!--> ////////////////////////////////// Camera //////////////////////////////<-->


  <link name="camera_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${cameraSize} ${cameraSize} ${cameraSize}"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${cameraSize} ${cameraSize} ${cameraSize}"/>
      </geometry>
      <material name="white"/>
    </visual>

    <inertial>
      <mass value="${cameraMass}" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <box_inertia m="${cameraMass}" x="${cameraSize}" y="${cameraSize}" z="${cameraSize}" />
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0.15 0 0.1" rpy="0 0 0"/>
    <parent link="v_base"/>
    <child link="camera_link"/>
  </joint>
  
 <!-->///////////////////////////////////// Lidar //////////////////////////////<-->
 

  <link name="hokuyo_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://v_description/meshes/hokuyo.dae"/>
      </geometry>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>
 
    <joint name="hokuyo_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0 0 0.175" rpy="0 0 0"/>
    <parent link="v_base"/>
    <child link="hokuyo_link"/>
  </joint>
  
 
  
</robot>
